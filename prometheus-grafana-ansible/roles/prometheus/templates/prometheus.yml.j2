global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['localhost:9100'] # Assuming node-exporter will be installed later

  - job_name: 'grafana'
    static_configs:
      - targets: ['localhost:3000']